            <div class="col-xs-full-width col-sm-6 col-sm-push-6 col-md-7 col-md-push-5 col-lg-offset-1 col-lg-push-4 text-center">
        {% endif %}
                <img src="{{ "670x334" | placeholder }}" alt="" class="img-responsive">
            </div>

        {% if controls[2] == "img-left" %}
            <div class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 text-center">
